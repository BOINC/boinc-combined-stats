log4j.rootCategory=INFO,root, R

log4j.appender.R=org.apache.log4j.ConsoleAppender
log4j.appender.R.layout=org.apache.log4j.PatternLayout
log4j.appender.R.layout.ConversionPattern=%-5p [%t]: (%x) %m%n
log4j.appender.root=org.apache.log4j.RollingFileAppender
log4j.appender.root.File=bsimport.log
log4j.appender.root.MaxFileSize=2MB
log4j.appender.root.MaxBackupIndex=2
log4j.appender.root.layout=org.apache.log4j.PatternLayout
log4j.appender.root.layout.ConversionPattern=%-5p %t (%x): %C: %m%n
#log4j.appender.root.layout.ConversionPattern=%-5p %t %c{1}: %m%n

# Log level can be changed on a per class basis.  to debug a class one
# may want to make root level to INFO and class level to DEBUG

